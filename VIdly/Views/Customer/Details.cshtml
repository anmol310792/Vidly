@model VIdly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
@if (Model.Birthdate.HasValue)
{
    <ul>
        <li>MembershipType : @Model.MembershipType.Name</li>
        <li>Birthdate : @Model.Birthdate</li>
    </ul>
}
else
{
    <ul>
        <li>MembershipType : @Model.MembershipType.Name</li>
    </ul>
}
